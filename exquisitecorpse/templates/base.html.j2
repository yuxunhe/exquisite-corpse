<!doctype html>
<head>
<title>{% block title %}{% endblock %} - Exquisite Corpse</title>
<link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
</head>
<body>
{% with messages = get_flashed_messages() %}
  {% if messages %}
    <ul class=flashes>
    {% for message in messages %}
      <li>{{ message }}</li>
    {% endfor %}
    </ul>
  {% endif %}
{% endwith %}
<nav>
  <h1><a href="{{ url_for('corpse.index') }}">Exquisite Corpse</a></h1>
  <ul>
    {% if g.user %}
      <li><span>{{ g.user['username'] }}</span></li>
      <li><a href="{{ url_for('auth.logout') }}">Log Out</a></li>
      <li><a href="{{ url_for('corpse.create') }}">Create New Corpse</a></li>
      <li><a href="{{ url_for('corpse.index') }}">Add a Limb</a></li>
      <li><a href="{{ url_for('corpse.mine') }}">View My Corpses</a></li>
      <li><a href="{{ url_for('corpse.randomone') }}">View A Random Corpse</a></li>
    {% else %}
      <li><a href="{{ url_for('auth.register') }}">Register</a></li>
      <li><a href="{{ url_for('auth.login') }}">Log In</a></li>
      <li><a href="{{ url_for('corpse.index') }}">Add a Limb</a></li>
      <li><a href="{{ url_for('corpse.randomone') }}">View A Random Corpse</a></li>
    {% endif %}
  </ul>
</nav>
<section class="content">
  <header>
    {% block header %}{% endblock %}
  </header>
  {% for message in get_flashed_messages() %}
    <div class="flash">{{ message }}</div>
  {% endfor %}
  {% block content %}{% endblock %}
</section>
</body>
